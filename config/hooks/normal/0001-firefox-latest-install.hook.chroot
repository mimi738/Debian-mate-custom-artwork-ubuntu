#!/bin/sh

set -e
apt-get remove --purge -y firefox-esr

#download and install firefox

curl -Lo firefox.tar.bz2 'https://download.mozilla.org/?product=firefox-latest&os=linux&lang=en-US'

tar -jxf firefox.tar.bz2

cp -rf firefox /opt

ln -s /opt/firefox/firefox /usr/bin/firefox

rm -R firefox
rm firefox.tar.bz2

update-alternatives --install /usr/bin/x-www-browser x-www-browser /opt/firefox/firefox 200 && sudo update-alternatives --set x-www-browser /opt/firefox/firefox
